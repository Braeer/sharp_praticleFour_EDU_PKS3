@model Practice_web.Models.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h2>Регистрация</h2>

<form asp-action="Register" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Login" class="col-sm-2 control-label">Логин</label>
        <div class="col-sm-10">
            <input asp-for="Login" class="form-control" name="login"/>
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-sm-2 control-label">Пароль</label>
        <div class="col-sm-10">
            <input asp-for="Password" type="password" class="form-control" name="password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FullName" class="col-sm-2 control-label">ФИО</label>
        <div class="col-sm-10">
            <input asp-for="FullName" class="form-control" name="fullname"/>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
